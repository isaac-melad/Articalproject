@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.TagHelpers
@inject SignInManager<IdentityUser> SignInManager

<!DOCTYPE html>
<html lang="ar" dir="rtl">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>@ViewData["Title"] - مقالاتي</title>

    <!-- Meta Tags -->
    <meta name="description" content="موقع يتيح لك نشر ومشاركة المقالات مع الآخرين">
    <meta name="keywords" content="مقالات، نشر، مشاركة، محتوى">
    <meta name="author" content="مقالاتي">

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;500;600;700;800&display=swap"
        rel="stylesheet">

    <!-- Stylesheets -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/css/modern-components.css">
    <link rel="stylesheet" href="~/css/form-fixes.css">
    @await RenderSectionAsync("Styles", required: false)

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="~/images/favicon.png">
</head>

<body id="page-top">
    <!-- Main Navigation -->
    <nav class="navbar navbar-expand-lg fixed-top">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                <i class="fas fa-feather-alt me-2"></i>مقالاتي
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive"
                aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <i class="fa fa-bars"></i>
            </button>

            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")"
                            asp-controller="Home" asp-action="Index">
                            <i class="fas fa-home me-1"></i>الرئيسية
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Categories" ? "active" : "")"
                            asp-controller="Home" asp-action="Categories">
                            <i class="fas fa-folder-open me-1"></i>التصنيفات
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "About" ? "active" : "")"
                            asp-controller="Home" asp-action="About">
                            <i class="fas fa-info-circle me-1"></i>من نحن
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Contact" ? "active" : "")"
                            asp-controller="Home" asp-action="Contact">
                            <i class="fas fa-envelope me-1"></i>اتصل بنا
                        </a>
                    </li>
                </ul>

                <div class="d-flex align-items-center gap-3">
                    @await Html.PartialAsync("_LoginPartial")
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <a class="btn btn-primary d-flex align-items-center" asp-controller="Admin" asp-action="Index">
                            <i class="fas fa-cog me-2"></i>لوحة التحكم
                        </a>
                    }
                    <button id="theme-toggle" class="btn theme-toggle-btn" aria-label="تبديل الوضع المظلم">
                        <div class="toggle-icon-wrapper">
                            <i class="fas fa-sun sun-icon"></i>
                            <i class="fas fa-moon moon-icon"></i>
                        </div>
                        <span class="toggle-ripple"></span>
                        <span class="toggle-tooltip">تبديل المظهر</span>
                    </button>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="page-wrapper">
        <main class="container py-5 mt-5">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <div class="footer-wave-container">
        <div class="footer-wave"></div>
    </div>
    <footer class="footer">
        <div class="container">
            <div class="row g-4">
                <div class="col-md-4 text-center text-md-start">
                    <h4 class="mb-3 footer-heading">موقعنا</h4>
                    <div class="footer-info">
                        <p class="mb-2"><i class="fas fa-map-marker-alt me-2 footer-icon"></i>القاهرة، مصر</p>
                        <p class="mb-2"><i class="fas fa-phone me-2 footer-icon"></i>+20 123456789</p>
                        <p class="mb-0"><i class="fas fa-envelope me-2 footer-icon"></i>info@makalaaty.com</p>
                    </div>
                </div>
                <div class="col-md-4 text-center">
                    <h4 class="mb-3 footer-heading">تابعنا</h4>
                    <div class="social-icons-container">
                        <a class="btn-social" href="#" aria-label="Facebook">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a class="btn-social" href="#" aria-label="Twitter">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a class="btn-social" href="#" aria-label="LinkedIn">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                        <a class="btn-social" href="#" aria-label="Instagram">
                            <i class="fab fa-instagram"></i>
                        </a>
                    </div>
                </div>
                <div class="col-md-4 text-center text-md-end">
                    <h4 class="mb-3 footer-heading">من نحن</h4>
                    <p class="mb-3">نمكنك من نشر المقالات مع الاحتفاظ بكامل الحقوق</p>
                    <div class="footer-links">
                        <a class="btn btn-sm btn-outline-light me-2 footer-btn" href="#">سياسة الخصوصية</a>
                        <a class="btn btn-sm btn-outline-light footer-btn" href="#">شروط الاستخدام</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="copyright mt-4 py-3">
            <div class="container text-center">
                <small>جميع الحقوق محفوظة © مقالاتي @DateTime.Now.Year</small>
            </div>
        </div>
    </footer>

    <!-- Scroll to Top Button -->
    <button class="scroll-top">
        <i class="fas fa-arrow-up"></i>
    </button>

    <!-- JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/smooth-scroll/16.1.3/smooth-scroll.min.js"></script>
    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("scripts", required: false)

    <script>
        // Initialize smooth scroll
        document.addEventListener('DOMContentLoaded', function () {
            new SmoothScroll('a[href*="#"]', {
                speed: 800,
                speedAsDuration: true,
                easing: 'easeInOutCubic'
            });
        });
    </script>
</body>

</html>