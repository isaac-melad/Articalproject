@model ArticalProject.Core.Models.AuthorPost

@{
    ViewData["Title"] = "تفاصيل المنشور";
}

<link rel="stylesheet" href="~/css/authorpost.css" />

<div class="category-container" style="font-family: 'Cairo', sans-serif;" dir="rtl">
    <div class="container py-5">
        <div class="card post-card border-0 shadow-sm">
            <div class="card-header bg-primary text-white py-4 rounded-top-3 position-relative">
                <div class="d-flex align-items-center gap-3">
                    <div class="icon-circle bg-white bg-opacity-25 rounded-circle p-2">
                        <i class="bi bi-file-text fs-2"></i>
                    </div>
                    <h1 class="h3 mb-0 fw-bold">تفاصيل المنشور</h1>
                </div>
            </div>

            <div class="card-body p-4 p-lg-5">
                <div class="row mb-5 g-4">
                    <div class="col-md-8">
                        <h2 class="h4 fw-bold mb-4 text-primary border-bottom pb-3">@Model.PostTitle</h2>

                        <div class="d-flex align-items-center text-muted mb-4 bg-light p-3 rounded-3">
                            <div class="me-4">
                                <i class="bi bi-person-circle me-2"></i>
                                <span>@Model.FullName</span>
                            </div>
                            <div>
                                <i class="bi bi-calendar3 me-2"></i>
                                <span>@Model.CreatedAt.ToString("yyyy-MM-dd")</span>
                            </div>
                        </div>

                        <div
                            class="post-content mb-4 bg-white p-3 rounded-3 border-start border-5 border-primary shadow-sm">
                            @Html.Raw(Model.Content)
                        </div>
                    </div>

                    <div class="col-md-4">
                        @if (!string.IsNullOrEmpty(Model.PostImageUrl))
                        {
                            <div class="mb-4 post-image-container shadow-sm rounded-3 overflow-hidden">
                                <img src="@Model.PostImageUrl" alt="صورة المنشور" class="img-fluid" />
                            </div>
                        }

                        <div class="card mb-4 border-0 shadow-sm">
                            <div class="card-header bg-light fw-bold">
                                <i class="bi bi-tag-fill me-2 text-primary"></i> التصنيف
                            </div>
                            <div class="card-body">
                                <span class="badge bg-primary rounded-pill px-3 py-2 fs-6">@(Model.Category?.Name ??
                                                                        "غير محدد")</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between border-top pt-4">
                    <a asp-action="Index" class="btn btn-secondary shadow-sm rounded-pill px-4">
                        <i class="bi bi-arrow-left me-2"></i> العودة للقائمة
                    </a>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id"
                            class="btn btn-primary shadow-sm rounded-pill px-4 me-2">
                            <i class="bi bi-pencil me-1"></i> تعديل
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id"
                            class="btn btn-danger shadow-sm rounded-pill px-4">
                            <i class="bi bi-trash me-1"></i> حذف
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .post-content {
        line-height: 1.8;
    }

    .icon-circle {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .post-image-container {
        transition: transform 0.3s ease;
    }

    .post-image-container:hover {
        transform: scale(1.02);
    }

    .btn {
        transition: all 0.3s ease;
    }

    .btn:hover {
        transform: translateY(-2px);
    }
</style>