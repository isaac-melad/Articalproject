@model ArticalProject.Core.Models.Category;

@{
    ViewData["Title"] = "إنشاء تصنيف";
    Layout = "_Layout";
}

<div class="container-fluid">
    <h2 class="text-dark text-right">إنشاء تصنيف</h2>
    <form method="post" asp-action="Create" dir="rtl">
        <div class="border p-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group row mb-3">
                <label asp-for="Name" class="col-sm-2 col-form-label">الاسم</label>
                <div class="col-sm-10">
                    <input asp-for="Name" class="form-control text-right" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-8 offset-2">
                    <button type="submit" class="btn btn-primary">إنشاء</button>
                    <a asp-action="Index" class="btn btn-secondary">رجوع للقائمة</a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
