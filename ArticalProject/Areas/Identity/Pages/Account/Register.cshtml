@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model RegisterModel
@{
    ViewData["Title"] = "التسجيل";
}

<div class="register-container">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="auth-card p-5 rounded-4">
                    <div class="text-center mb-5">
                        <div class="mb-4">
                            <i class="fas fa-user-plus fa-3x mb-3"
                                style="background: linear-gradient(to right, var(--primary), var(--secondary)); -webkit-background-clip: text; background-clip: text; color: transparent;"></i>
                        </div>
                        <h1 class="display-6 fw-bold mb-3">@ViewData["Title"]</h1>
                        <p class="text-muted">أنشئ حسابك الجديد في خطوات بسيطة</p>
                    </div>

                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>

                        <div class="form-floating mb-4 input-group-hover">
                            <input asp-for="Input.FullName" class="form-control py-3" aria-required="true" />
                            <label asp-for="Input.FullName" class="form-label">
                                <i class="fas fa-user me-2"></i>الاسم الكامل
                            </label>
                            <span asp-validation-for="Input.FullName" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-4 input-group-hover">
                            <input asp-for="Input.Email" class="form-control py-3" aria-required="true" />
                            <label asp-for="Input.Email" class="form-label">
                                <i class="fas fa-envelope me-2"></i>البريد الإلكتروني
                            </label>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-4 input-group-hover">
                            <input asp-for="Input.Password" class="form-control py-3" aria-required="true" />
                            <label asp-for="Input.Password" class="form-label">
                                <i class="fas fa-lock me-2"></i>كلمة المرور
                            </label>
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-4 input-group-hover">
                            <input asp-for="Input.ConfirmPassword" class="form-control py-3" aria-required="true" />
                            <label asp-for="Input.ConfirmPassword" class="form-label">
                                <i class="fas fa-check-circle me-2"></i>تأكيد كلمة المرور
                            </label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <button id="registerSubmit" type="submit"
                            class="w-100 btn btn-primary btn-lg rounded-pill py-3 fw-bold">
                            <i class="fas fa-user-plus me-2"></i>إنشاء حساب
                        </button>

                        <div class="text-center mt-4">
                            <p class="text-muted mb-0">
                                هل لديك حساب بالفعل؟
                                <a href="/Identity/Account/Login" class="text-decoration-none fw-bold text-primary">
                                    سجل الدخول الآن
                                </a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="~/css/register.css" />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <script>
        // Add animation to form elements
        document.addEventListener('DOMContentLoaded', function () {
            // Staggered animation for form fields
            const formElements = document.querySelectorAll('.form-floating, .btn-primary');
            formElements.forEach((element, index) => {
                element.style.opacity = '0';
                element.style.transform = 'translateY(20px)';
                setTimeout(() => {
                    element.style.transition = 'all 0.5s ease';
                    element.style.opacity = '1';
                    element.style.transform = 'translateY(0)';
                }, 100 + (index * 100));
            });

            // Add hover effect to input groups
            const inputGroups = document.querySelectorAll('.input-group-hover');
            inputGroups.forEach(group => {
                group.addEventListener('mouseenter', function () {
                    if (!this.querySelector('.form-control:focus')) {
                        this.style.transform = 'translateY(-2px)';
                    }
                });

                group.addEventListener('mouseleave', function () {
                    if (!this.querySelector('.form-control:focus')) {
                        this.style.transform = 'translateY(0)';
                    }
                });
            });
        });
    </script>
}