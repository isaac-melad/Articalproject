@model string

@if (!String.IsNullOrEmpty(Model))
{
    var statusMessageClass = Model.StartsWith("Error") ? "danger" : "success";
    var statusIcon = Model.StartsWith("Error") ? "fas fa-exclamation-circle" : "fas fa-check-circle";

    <div class="alert-container animate__animated animate__fadeIn">
        <div class="alert alert-@statusMessageClass d-flex align-items-center rounded-3 border-0 shadow-sm mb-4"
            role="alert">
            <div class="alert-icon me-3">
                <i class="@statusIcon fa-lg"></i>
            </div>
            <div class="alert-content">
                @Model
            </div>
            <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
}

<style>
    .alert-container {
        overflow: hidden;
    }

    .alert {
        position: relative;
        padding: 1rem 1.25rem;
    }

    .alert-danger {
        background: linear-gradient(135deg, #ffebee, #ffcdd2);
        color: #c62828;
    }

    .alert-success {
        background: linear-gradient(135deg, #e8f5e9, #c8e6c9);
        color: #2e7d32;
    }

    .alert-icon {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 32px;
        height: 32px;
    }

    .btn-close {
        opacity: 0.5;
        transition: all 0.3s ease;
    }

    .btn-close:hover {
        opacity: 1;
    }
</style>