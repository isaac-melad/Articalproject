@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IndexModel
@{
    ViewData["Title"] = "الملف الشخصي";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="container py-3">
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-lg rounded-4 hover-shadow-lg transition-all">
                <div class="card-header bg-gradient-primary text-white p-4 rounded-top-4 border-0">
                    <div class="d-flex align-items-center">
                        <div class="profile-avatar bg-white text-primary rounded-circle p-3 me-3">
                            <i class="fas fa-user-circle fa-2x"></i>
                        </div>
                        <div>
                            <h3 class="card-title mb-0 fw-bold">@ViewData["Title"]</h3>
                            <p class="mb-0 opacity-75">تحديث معلوماتك الشخصية</p>
                        </div>
                    </div>
                </div>
                <div class="card-body p-4">
                    <partial name="_StatusMessage" for="StatusMessage" />

                    <!-- Profile Picture Section -->
                    <div class="text-center mb-4 animate__animated animate__fadeIn">
                        <div class="profile-picture-container mx-auto mb-3">
                            @if (!string.IsNullOrEmpty(Model.Input.ProfilePicture))
                            {
                                <img src="@Model.Input.ProfilePicture" alt="صورة الملف الشخصي" class="profile-picture" />
                            }
                            else
                            {
                                <div class="profile-picture-placeholder">
                                    <i class="fas fa-user fa-4x"></i>
                                </div>
                            }
                            <div class="profile-picture-overlay">
                                <i class="fas fa-camera"></i>
                                <p class="mb-0 small">تغيير الصورة</p>
                            </div>
                        </div>
                        <p class="text-muted small mb-4">انقر لتغيير صورة الملف الشخصي</p>
                    </div>

                    <form id="profile-form" method="post" class="needs-validation">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 shadow-sm"
                            role="alert"></div>

                        <!-- Hidden field for profile picture URL -->
                        <input type="hidden" asp-for="Input.ProfilePicture" id="profile-picture-url" />

                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="form-group animate__animated animate__fadeIn">
                                    <div class="form-floating form-floating-custom">
                                        <input asp-for="Username"
                                            class="form-control form-control-lg bg-light border-0 shadow-sm"
                                            placeholder="يرجى اختيار اسم المستخدم" disabled />
                                        <label asp-for="Username" class="text-muted">
                                            <i class="fas fa-user me-2"></i>اسم المستخدم
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group animate__animated animate__fadeIn">
                                    <div class="form-floating form-floating-custom">
                                        <input asp-for="Input.FullName"
                                            class="form-control form-control-lg border-0 shadow-sm"
                                            placeholder="يرجى إدخال الاسم الكامل" />
                                        <label asp-for="Input.FullName">
                                            <i class="fas fa-id-card me-2"></i>الاسم الكامل
                                        </label>
                                        <span asp-validation-for="Input.FullName" class="text-danger small mt-1"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-group animate__animated animate__fadeIn">
                                    <div class="form-floating form-floating-custom">
                                        <input asp-for="Input.PhoneNumber"
                                            class="form-control form-control-lg border-0 shadow-sm" />
                                        <label asp-for="Input.PhoneNumber">
                                            <i class="fas fa-phone me-2"></i>رقم الهاتف
                                        </label>
                                        <span asp-validation-for="Input.PhoneNumber"
                                            class="text-danger small mt-1"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-group animate__animated animate__fadeIn">
                                    <div class="form-floating form-floating-custom">
                                        <textarea asp-for="Input.Bio"
                                            class="form-control form-control-lg border-0 shadow-sm"
                                            placeholder="اكتب نبذة عنك" style="height: 120px"></textarea>
                                        <label asp-for="Input.Bio">
                                            <i class="fas fa-info-circle me-2"></i>نبذة عنك
                                        </label>
                                        <span asp-validation-for="Input.Bio" class="text-danger small mt-1"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 animate__animated animate__fadeIn mt-4">
                            <button id="update-profile-button" type="submit"
                                class="btn btn-primary btn-lg shadow hover-shadow-lg transition-all">
                                <i class="fas fa-save me-2"></i>حفظ التغييرات
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/account/profile.css" />
    <script src="~/js/profile-picture-upload.js"></script>
}